@model List<App.Domain.Core.Models.Identity.Role.IndexDto>
@{
    ViewData["Title"] = "ShowAllUser";
}

@if (!Model.Any())
{
    <h1>چیزی پیدا نشد</h1>
}
else
{
    for (int i = 0; i < Model.Count; i++)
    {
        <div class="card mt-2">
            <div class="card-header">
                FirstName : <b>@Model[i].FirstName</b>
            </div>
            <div class="card-header">
                LastName : <b>@Model[i].LastName</b>
            </div>
            <div class="card-header">
                UserName : <b>@Model[i].UserName</b>
            </div>
            <div class="card-body">
                Email : <b>@Model[i].Email</b>
            </div>
            <div class="card-footer">
                <form asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@Model[i].Id" method="post">

                    <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@Model[i].Id" class="btn btn-primary">Edit User</a>

                    <button type="submit" class="btn btn-danger">Delete User</button>
                </form>
            </div>
        </div>
    }
}
