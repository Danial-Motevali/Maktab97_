@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<a asp-controller="ManagerRole" asp-action="AddRole" class="btn btn-Primary">Add Role</a>

@if (!Model.Any())
{
    <h1>چیزی پیدا نشد</h1>
}
else
{
    for(int i = 0; i < Model.Count; i++)
    {
        <div class="card mt-2">
            <div class="card-body">
                RoleName : <b>@Model[i].Name</b>
            </div>
            <div class="card-footer">
                <form asp-controller="ManagerRole" asp-action="DeleteRole" method="post" asp-route-id="@Model[i].Id">

                    <a asp-controller="ManagerRole" asp-action="EditRole" asp-route-id="@Model[i].Id" class="btn btn-primary">Edit</a>

                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    }
}
