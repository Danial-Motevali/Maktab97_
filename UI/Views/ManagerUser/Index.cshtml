@model List<App.Domain.Core.Models.Identity.Role.IndexDto>
@{
    ViewData["Title"] = "Index";
}

<a asp-controller="ManagerRole" asp-action="AddRole" class="btn btn-Primary">Add Role</a>

@if (!Model.Any())
{
    <h1>چیزی پیدا نشد</h1>
}
else
{
    foreach (var user in Model)
    {
        <div class="card mt-2">
            <div class="card-header">
                FirstName : <b>@user.FirstName</b>
            </div>
            <div class="card-header">
                LastName : <b>@user.LastName</b>
            </div>
            <div class="card-header">
                UserName : <b>@user.UserName</b>
            </div>
            <div class="card-body">
                Email : <b>@user.Email</b>
            </div>
            <div class="card-footer">
                <form asp-controller="ManagerUser" asp-action="DeleteUser" asp-route-id="@user.Id" method="get">

                    <a asp-controller="ManagerUser" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit User</a>

                    <a asp-controller="ManagerUser" asp-action="AddUserRole" asp-route-id="@user.Id" class="btn btn-primary">Add To Role</a>

                    <a asp-controller="ManagerUser" asp-action="RemoveUserRole" asp-route-id="@user.Id" class="btn btn-primary">Remove User from Role</a>

                    <button type="submit" class="btn btn-danger">Delete User</button>
                </form>
            </div>
        </div>
    }
}
